#!/bin/bash

# Clone the repository
git clone https://github.com/coderbyte-org/big-o
cd big-o

# Create and switch to feat/my-feature-1 branch
git checkout -b feat/my-feature-1

# Create feat/my-feature-2 branch
git branch feat/my-feature-2

# Create and add content to file.txt in feat/my-feature-1 branch
echo "This is some initial content for the file." > file.txt
git add file.txt
git commit -m "docs: add file.txt"

# Switch to feat/my-feature-2 branch
git checkout feat/my-feature-2

# Modify file.txt in feat/my-feature-2 branch
echo "This is some new content for the file." >> file.txt
git add file.txt
git commit -m "docs: update file.txt"

# Switch back to feat/my-feature-1 branch
git checkout feat/my-feature-1

# Merge feat/my-feature-2 into feat/my-feature-1, expect a conflict
git merge feat/my-feature-2

# Resolve the merge conflict by keeping changes from feat/my-feature-2
# (You may need to manually edit the 'file.txt' to keep the desired changes)
git add file.txt
git commit -m "Merge branch 'feat/my-feature-2' into feat/my-feature-1"

# Display the commit history
git log --oneline

# Clean up (optional)
# If you want to remove the local feature branches after the merge
# git branch -d feat/my-feature-1 feat/my-feature-2
